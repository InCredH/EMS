    <tbody>
@foreach (var item in Model.Line) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LineType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CircuitNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConductorType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutoReclosure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LineCircuitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendingEndSPS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceivingEndSPS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstChargingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Element.ElementId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromBus.BusId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToBus.BusId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voltage.VoltageId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LineId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LineId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LineId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
