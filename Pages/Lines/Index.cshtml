            <th>
                @Html.DisplayNameFor(model => model.Line[0].ReceivingEndSPS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line[0].FirstChargingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line[0].Element)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line[0].FromBus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line[0].ToBus)
            </th>
