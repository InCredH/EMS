    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HVDCPole[0].PoleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HVDCPole[0].PoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HVDCPole[0].PoleNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HVDCPole[0].MaxFiringAngle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HVDCPole[0].MinFiringAngle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HVDCPole[0].Voltage)
            </th>
