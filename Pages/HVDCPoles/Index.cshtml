                @Html.DisplayNameFor(model => model.HVDCPole[0].Element)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.HVDCPole) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PoleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoleNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxFiringAngle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinFiringAngle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voltage.VoltageId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Element.ElementId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.HVDCPoleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.HVDCPoleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.HVDCPoleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
