@model EMS.Pages.Substations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Substation[0].SubstationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Substation[0].SubstationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Substation[0].Voltage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Substation[0].Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Substation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubstationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubstationType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voltage.VoltageLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.LocationName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SubstationId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SubstationId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SubstationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
