@page
@model EMS.Pages.Owners.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Owner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Owner.OwnerName" class="control-label"></label>
                <input asp-for="Owner.OwnerName" class="form-control" />
                <span asp-validation-for="Owner.OwnerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedConstituentId" class="control-label">Constituent Name</label>
                <select asp-for="SelectedConstituentId" asp-items="Model.ConstituentList" class="form-control">
                    <option value="">-- Select Constituent Name --</option>
                </select>
                <span asp-validation-for="SelectedConstituentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
