@page
@model EMS.Pages.Constituents.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Constituent</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Constituent.ConstituentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Constituent.ConstituentName)
        </dd>
        @* //display all owners of this particular Constituent *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Constituent.Owners)
        </dt>
        <dd class="col-sm-10">
            @foreach (var owner in Model.Constituent.Owners)
            {
                <div>
                    @Html.DisplayFor(modelItem => owner.OwnerName)
                </div>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Constituent?.ConstituentId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
