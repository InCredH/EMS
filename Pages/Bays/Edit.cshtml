@page
@model EMS.Pages.Bays.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bay</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bay.BayId" />
            <div class="form-group">
                <label asp-for="Bay.ElementId" class="control-label"></label>
                <select asp-for="Bay.ElementId" class="form-control" asp-items="ViewBag.ElementId"></select>
                <span asp-validation-for="Bay.ElementId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bay.ConnectingElement1Id" class="control-label"></label>
                <select asp-for="Bay.ConnectingElement1Id" class="form-control" asp-items="ViewBag.ConnectingElement1Id"></select>
                <span asp-validation-for="Bay.ConnectingElement1Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bay.ConnectingElement2Id" class="control-label"></label>
                <select asp-for="Bay.ConnectingElement2Id" class="form-control" asp-items="ViewBag.ConnectingElement2Id"></select>
                <span asp-validation-for="Bay.ConnectingElement2Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bay.VoltageId" class="control-label"></label>
                <select asp-for="Bay.VoltageId" class="form-control" asp-items="ViewBag.VoltageId"></select>
                <span asp-validation-for="Bay.VoltageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bay.BayType" class="control-label"></label>
                <input asp-for="Bay.BayType" class="form-control" />
                <span asp-validation-for="Bay.BayType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Bay.IsFuture" /> @Html.DisplayNameFor(model => model.Bay.IsFuture)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
